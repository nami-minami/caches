{
    "json-language-server": {
        "workspace_config": {
            "schemas": [
                {
                    "fileMatch": [
                        "deno.json"
                    ],
                    "url": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json"
                }
            ]
        }
    },
    "pylsp-all": {
        "workspace_config": {
            "pylsp": {
                "configurationSources": ["flake8"],
                "plugins": {
                    "flake8": {
                        "enabled": true,
                        "ignore": [
                            "E501"
                        ]
                    },
                    "pycodestyle": {
                        "enabled": false
                    },
                    "mccabe": {
                        "enabled": false
                    },
                    "pyflakes": {
                        "enabled": false
                    }
                }
            }
        }
    }
}
